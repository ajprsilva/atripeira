<phone:PhoneApplicationPage
    x:Class="atripeira.Ingredientes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="A Tripeira" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock Text="Ingredientes" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla maximus turpis urna, vitae mollis nisi cursus at. Etiam non quam massa. Donec at elementum nibh, accumsan pellentesque dolor. Praesent faucibus odio eros, in viverra libero viverra non. Nulla faucibus mattis purus non efficitur. Sed congue ultricies lorem, non sollicitudin lectus feugiat id. Aenean pellentesque semper vulputate. Sed rhoncus massa nisi, at molestie nisl mattis ac. Integer aliquet blandit dapibus. Nunc metus metus, euismod eu urna scelerisque, tristique semper leo. Pellentesque nec eros sagittis, maximus eros non, posuere risus. Etiam convallis justo ac augue varius, ac porttitor justo eleifend. Nulla commodo libero augue, in vestibulum nunc vulputate ac. Nulla quis mollis purus. Curabitur lobortis, augue sed scelerisque bibendum, justo nisi tempus metus, a feugiat leo lorem a erat. Pellentesque nec efficitur arcu." VerticalAlignment="Top" Height="587" Width="436"/>

        </Grid>
    </Grid>

</phone:PhoneApplicationPage>